/* Common Component Module */
img
	height auto
	max-width 100%
	vertical-align middle
	border 0

/* Header Module */
#ac_header
	margin-bottom 0
	background-color #fff
	border-bottom 0

	.navbar-nav>li>a
		font-weight 500
		color darken(#c53e31,30%)

	.navbar-brand img
		height 100%


/* Footer Module Start */
#ac_footer
	padding-top 40px
	padding-bottom 40px
	margin-top 100px
	color #777
	text-align center
	border-top 1px solid #e5e5e5

.ac_footer_links
	padding-left 0
	margin-top 20px
	color #999

	li
		display inline
		padding 0 2px

		&:first-child
			padding-left 0

/* Footer Module End */


/* ac_index Module Start */
#ac_index_jumbotron
	position relative
	padding 30px 15px
	color #e3bfc2
	text-align center
	text-shadow: 0 1px 0 rgba(0,0,0,.1);
	background-color: #6f5499;
	background linear-gradient(top,#dd4b39,#d14836)
	filter:unquote("progid:DXImageTransform.Microsoft.gradient(startColorstr='#563d7c', endColorstr='#6F5499', GradientType=0)")
	background-repeat repeat-x

	.container
		position relative

	h1
		margin-top 0
		color #fff

	p
		margin-bottom 0
		font-weight 300
		line-height 1.4


#ac_index_content
	position relative

	.ac_sortItem
		padding 50px 0

		h3
			font-weight 300;
			color #1874c1
			font-size 36px
			padding 0px 20px
			border-right 1px solid #eeE
			text-align left

			span
				display block
				margin-top 5px
				color #536676
				font-size 16px

/* ac_index Module End */