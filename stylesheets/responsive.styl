@media all and (min-width: 768px)
	/* ac_index responsive start */

	#ac_index_jumbotron
		padding-top 60px
		padding-bottom 60px
		font-size 24px
		text-align left

		h1
			font-size 60px
			line-height 1

		p
			font-size 24px

	/* ac_index responsive end */


